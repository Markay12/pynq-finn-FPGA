#!/bin/bash

# check if the script is being run as root
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi

# add the environment variable settings to the sudoers file
if visudo -cf /tmp/sudoers.tmp; then
    cat /tmp/sudoers.tmp >> /etc/sudoers
    echo "Environment variables added to /etc/sudoers"
else
    echo "Error: Failed to add environment variables to /etc/sudoers" >&2
    exit 1
fi

# remove the temporary file
rm /tmp/sudoers.tmp

